<Application x:Class="SpaceVenueApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SpaceVenueApp.Converters"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <Color x:Key="SpaceDark">#0B0B2A</Color>
    <Color x:Key="SpaceGold">#FFD700</Color>
    <SolidColorBrush x:Key="SpaceDarkBrush" Color="{StaticResource SpaceDark}" />
    <SolidColorBrush x:Key="SpaceGoldBrush" Color="{StaticResource SpaceGold}" />
    <SolidColorBrush x:Key="ActiveGreenBrush" Color="#2ECC71" />
    <SolidColorBrush x:Key="StoppedRedBrush" Color="#E74C3C" />
    <Style TargetType="TextBlock">
      <Setter Property="Foreground" Value="White" />
    </Style>
    <converters:CurrencyDisplayConverter x:Key="CurrencyDisplayConverter" />
    <converters:TimeDisplayConverter x:Key="TimeDisplayConverter" />
  </Application.Resources>
</Application>
